{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "esnext",
		"baseUrl": ".",
		"types": [
			"webpack-env",
			"jest",
			"vuetify"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"common/*": [
				"../common/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["node_modules", "dist", "ts-out"]
}